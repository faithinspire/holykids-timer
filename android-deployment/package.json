{
  "name": "school-biometric-attendance-android",
  "version": "1.0.0",
  "description": "School Staff Biometric Attendance System - Android App",
  "main": "index.js",
  "scripts": {
    "build": "next build && next export",
    "android:setup": "npm install @capacitor/core @capacitor/cli @capacitor/android @capacitor/biometric-auth @capacitor/geolocation @capacitor/local-notifications @capacitor/push-notifications @capacitor/status-bar @capacitor/keyboard @capacitor/splash-screen",
    "android:init": "npx cap add android",
    "android:build": "npm run build && npx cap copy android && npx cap sync android",
    "android:open": "npx cap open android",
    "android:run": "npx cap run android",
    "android:release": "cd android && ./gradlew assembleRelease",
    "android:bundle": "cd android && ./gradlew bundleRelease",
    "keystore:generate": "keytool -genkey -v -keystore android-deployment/keystore/attendance-keystore.jks -keyalg RSA -keysize 2048 -validity 10000 -alias attendance-key"
  },
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/biometric-auth": "^5.0.0",
    "@capacitor/cli": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/geolocation": "^5.0.0",
    "@capacitor/keyboard": "^5.0.0",
    "@capacitor/local-notifications": "^5.0.0",
    "@capacitor/push-notifications": "^5.0.0",
    "@capacitor/splash-screen": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0"
  },
  "author": "Olushola Paul Odunuga",
  "license": "MIT"
}