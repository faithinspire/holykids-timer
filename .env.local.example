# HOLYKIDS Biometric Attendance System - Environment Configuration
# Copy this file to .env.local and fill in your values

# ========================================
# SUPABASE CONFIGURATION (Required for cloud sync)
# ========================================
# Get these from your Supabase Dashboard → Settings → API
# https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service Role Key (Server-side only, never expose to client)
# Get this from Supabase Dashboard → Settings → API → service_role key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ========================================
# APPLICATION SETTINGS
# ========================================
NEXT_PUBLIC_APP_NAME=HOLYKIDS Staff Attendance
NEXT_PUBLIC_ORGANIZATION_NAME=HOLYKIDS School
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# BIOMETRIC SETTINGS
# ========================================
# WebAuthn requires HTTPS in production
NEXT_PUBLIC_REQUIRE_HTTPS=true
